@model Adopcion.Models.Question



@using (Html.BeginForm("AddQuestion", "Question", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Contactar al Dueño</legend>
        @Html.HiddenFor(model => model.pet_ID)
        

        <div class="editor-label">
            Ingrese su Nombre:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Interested_Name)
            @Html.ValidationMessageFor(model => model.Interested_Name)
        </div>

        <div class="editor-label">
            Ingrese su Telefono:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Interested_Phone)
            @Html.ValidationMessageFor(model => model.Interested_Phone)
        </div>

        <div class="editor-label">
            Ingrese su Correo Electronico
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Interested_Email)
            @Html.ValidationMessageFor(model => model.Interested_Email)
        </div>

        <div class="editor-label">
            Pregunta
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Interested_Question)
            @Html.ValidationMessageFor(model => model.Interested_Question)
        </div>


        <p>
            <input type="submit" value="Enviar" class="button radius success" formmethod="post" />
        </p>
    </fieldset>
}

