@model Adopcion.Models.Pet

@{
    ViewBag.Title = "Formulario";
}
<br />
<h2>Formulario de Registro</h2>
<div class="row">
    <aside class="large-8 columns ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Mascota</legend>

                <div class="editor-label">
                    Nombre
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="editor-label">
                    Fecha de Nacimiento
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.BirthDate)
                    @Html.ValidationMessageFor(model => model.BirthDate)
                </div>

                <div class="editor-label">
                    Tipo
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Type, Adopcion.Utils.SelectListItemHelper.TypesList())
                    @Html.ValidationMessageFor(model => model.Type)

                </div>

                <div class="editor-label">
                    Raza
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Race, Adopcion.Utils.SelectListItemHelper.RacesList())
                    @Html.ValidationMessageFor(model => model.Race)
                </div>

                <div class="editor-label">
                    Peso(Kg)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Weight)
                    @Html.ValidationMessageFor(model => model.Weight)
                </div>

                <div class="editor-label">
                    Altura(Cm)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Height)
                    @Html.ValidationMessageFor(model => model.Height)
                </div>

                <div class="editor-label">
                    Ciudad
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.City, Adopcion.Utils.SelectListItemHelper.CitiesList())
                    @Html.ValidationMessageFor(model => model.City)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Email)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>

                <p>
                    <input type="submit" value="Registrar" class="button success" />
                </p>
            </fieldset>
        }

    </aside>
    <br />
    <br />
    <div class="large-4 columns">

        <p class="th"><img src="~/Images/Perro.jpg" /></p>
        <p class="th"><img src="~/Images/gato.jpg" /></p>
        <p class="th"><img src="~/Images/perro2.jpg" /></p>

    </div>

</div>

<div>
    <a href="@Url.Action("Index", "Home")" class=" button ">Volver al Menú <i class="fi-home"></i></a>

</div>